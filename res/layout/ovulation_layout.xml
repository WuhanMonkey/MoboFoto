<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport = "false">

<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dip">


        <TextView
            android:id="@+id/ovu_name"          
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="Ovulation analysis report\n\n" 
            android:textSize = "18sp"
            android:gravity="center"/>
        
        <TextView
            android:id="@+id/ovu_report_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" 
            android:gravity="center"
            android:textSize = '15sp'/>
        <TextView
            android:id="@+id/ovu_report_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" 
            android:gravity="center"
            android:textSize = '15sp'/>
        <TextView
            android:id="@+id/ovu_report_concentration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" 
            android:gravity="center"
            android:textSize = '15sp'/>


        
        
            <TableRow
        android:id="@+id/ohr1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
								></TableRow>
            

        
        
        <TextView
            android:id="@+id/ovulationTrend"          
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="Ovulation trend"
            android:textSize = "15sp"
            android:gravity="center"/>
        
	        <com.jjoe64.graphview.GraphView
            android:id="@+id/trend_graph"
            android:layout_width="match_parent"
            android:layout_height="200dip" />
        
                <TableRow
        android:id="@+id/ohr2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#00000000"
								></TableRow>

                <TextView
            android:id="@+id/ovulationImageTrend"          
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="Ovulation image trend"
            android:textSize = "15sp"
            android:gravity="center"/>
                
        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="200dip" />
        
       <TableRow
        android:id="@+id/ohr3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#00000000"
								></TableRow>

                
               
        <ImageView 
            android:id="@+id/ovu_small_scale"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
              android:adjustViewBounds="true"  
  android:maxWidth="1000dp"  
  android:maxHeight="1000dp"  
  android:scaleType="fitCenter" 
            />
        


</LinearLayout>

</ScrollView>


